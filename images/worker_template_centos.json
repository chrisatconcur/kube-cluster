{
    "variables": {
        "source_ami_id": "",
        "aws_region": "cn-north-1"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "heptio-k8s-worker-centos-{{timestamp}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami_id`}}",
            "ssh_username": "centos",
            "security_group_id": "sg-6e39c609",
            "ssh_keypair_name": "tectonic-installer",
            "ssh_private_key_file": "tectonic-installer.pem"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "kubernetes-node-linux-amd64.tar.gz",
            "destination": "/tmp/kubernetes-node-linux-amd64.tar.gz"
        },
        {
            "type": "file",
            "source": "kubelet.service",
            "destination": "/tmp/kubelet.service"
        },
        {
            "type": "file",
            "source": "selinux_config",
            "destination": "/tmp/selinux_config"
        },
        {
            "type": "shell",
            "script": "./install_k8s_centos.sh"
        },
        {
            "type": "file",
            "source": "bootstrap_worker_centos.sh",
            "destination": "/tmp/bootstrap_worker.sh"
        },
        {
            "type": "file",
            "source": "bootstrap-worker.service",
            "destination": "/tmp/bootstrap-worker.service"
        },
        {
            "type": "shell",
            "script": "./move_files.sh",
            "environment_vars": "ROLE=worker"
        }
    ]
}

