{
    "variables": {
        "source_ami_id": "{{env `SOURCE_AMI_ID`}}",
        "aws_region": "{{env `AWS_DEFAULT_REGION`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "heptio-k8s-worker-centos-{{timestamp}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami_id`}}",
            "ssh_username": "centos"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "selinux_config",
            "destination": "/tmp/selinux_config"
        },
        {
            "type": "shell",
            "script": "./install_k8s_centos.sh"
        },
        {
            "type": "file",
            "source": "bootstrap_worker_centos.sh",
            "destination": "/tmp/bootstrap_worker.sh"
        },
        {
            "type": "file",
            "source": "bootstrap-worker.service",
            "destination": "/tmp/bootstrap-worker.service"
        },
        {
            "type": "shell",
            "script": "./move_files.sh",
            "environment_vars": "ROLE=worker"
        }
    ]
}

